{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{% set classes = ['region', 'region-' ~ (region|clean_class)] %}
<div {{ attributes.addClass(classes) }}>
  {{ drupal_entity('block', 'quanthub_tailwindcss_branding') }}
  <div class="menu--wrapper">
    <a class="mobile-drop-link">Open</a>
    <div class="menu-holder">
      {{ drupal_entity('block', 'search_in_header') }}
      <div class="top-navs">
        {{ drupal_menu('main', expand = true) }}
        {{ drupal_entity('block', 'languageswitcher') }}
      </div>
      {{ drupal_entity('block', 'quanthub_tailwindcss_account_menu') }}
    </div>
  </div>
</div>
